@inherits LayoutComponentBase
@using API.Clients
@using DTOs
@inject BlazorApp.Client.AuthStateProvider Auth   
@inject NavigationManager Nav                   
@implements IDisposable

<CascadingValue Value="this">
    <div class="page">
        <div class="sidebar">
            <NavMenu CarritoItemCount="_carritoCantidad" />
        </div>

        <main>
            <div class="top-row px-4">
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>

                <div class="ms-auto">
                    @if (Auth.CurrentUser is not null)
                    {
                        <span class="me-3">
                            Hola, @Auth.CurrentUser.Nombre!
                        </span>
                        <button class="btn btn-link" @onclick="Logout">Cerrar Sesión</button>
                    }
                    else
                    {
                        <a href="/login">Login</a>
                    }
                </div>
            </div>

            <article class="content px-4">
                @Body
            </article>
        </main>
    </div>
</CascadingValue>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private int _carritoCantidad = 0;

    protected override async Task OnInitializedAsync()
    {
        // suscribimos al evento (login/logout)
        Auth.OnChange += HandleAuthStateChanged;
        await ActualizarBadgeCarritoAsync();
    }

    /// <summary>
    /// Método público para que las páginas hijas (Carrito, Productos, etc.)
    /// puedan refrescar el número del carrito en el menú.
    /// </summary>
    public async Task ActualizarBadgeCarritoAsync()
    {
        _carritoCantidad = 0;

        var u = Auth.CurrentUser;
        if (u is null || u.TipoUsuario != "Cliente")
        {
            await InvokeAsync(StateHasChanged);
            return;
        }

        try
        {
            // Usa la propiedad correcta del usuario (Id, IdUsuario o IdCliente según tu DTO)
            var userId = u.Id; // <- SI tu DTO usa otro nombre, cambia aquí (p.ej. u.IdCliente)

            var carrito = await CarritoApiClient.GetAsync(userId);

            // Si tu DTO del carrito NO tiene CantidadTotal, sumamos los ítems.
            _carritoCantidad =
                carrito?.CantidadTotal
                ?? carrito?.Items?.Sum(i => i.Cantidad) ?? 0;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al obtener cantidad del carrito: {ex.Message}");
            _carritoCantidad = 0;
        }

        await InvokeAsync(StateHasChanged);
    }

    // Se dispara en login/logout
    private async void HandleAuthStateChanged()
    {
        await ActualizarBadgeCarritoAsync();
    }

    public void Dispose()
    {
        Auth.OnChange -= HandleAuthStateChanged;
    }

    private async Task Logout()
    {
        await Auth.Logout();
        _carritoCantidad = 0;
        await InvokeAsync(StateHasChanged);
        Nav.NavigateTo("/login");
    }
}
